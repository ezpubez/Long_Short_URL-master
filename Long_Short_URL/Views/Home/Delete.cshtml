@model Long_Short_URL.Models.Link
@{
    ViewBag.Title = "Удаление ссылки";
}

<div>
    <dl class="dl-horizontal">
        <dt>Длинная ссылка</dt>
        <dd>
            @Html.DisplayFor(model => model.LongUrl)
        </dd>

        <dt>Короткая ссылка</dt>
        <dd>
            @Html.DisplayFor(model => model.ShortUrl)
        </dd>
        <dt>Дата</dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>