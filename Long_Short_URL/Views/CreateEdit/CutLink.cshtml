@model Long_Short_URL.Models.Link
@{ ViewData["Title"] = "Сокращенная ссылка"; }

<div class="jumbotron text-center">
    <h1 class="display-3">Готово!</h1>
    <p class="lead">Сокращённая ссылка находится в поле ниже</p>
    <hr class="my-4">
    <form asp-action="CutLink" method="post">
        <div class="form-group">
            <div class="container-fluid">
                <input name="originalLink" type="url" class="form-control" id="inputLink" value="@Environment.GetEnvironmentVariable("BaseURL")/Redirect/Rdrc/@Model.ShortUrl">
            </div>
        </div>
        <p class="lead">
            @*<input class="btn btn-primary btn-lg" type="submit" name="name" value="Сократить" />*@
        </p>
    </form>
</div>

