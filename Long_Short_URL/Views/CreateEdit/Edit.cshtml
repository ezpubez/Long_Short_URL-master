@model Long_Short_URL.Models.Link
@{
    ViewBag.Title = "Редактировать";
}
<form asp-action="edit" asp-controller="CreateEdit" asp-route-id="@Model.Id">
    <div class="form-group" style="width=100%">
        <label asp-for="LongUrl" class="control-label">Длинная ссылка</label><br />
        <input type="text" readonly asp-for="LongUrl" class="form-control-lg" style="width:49%"/>
    </div>
    <div class="form-group" style="width=100%">
        <label asp-for="ShortUrl" class="control-label">Короткая ссылка</label><br />
        <input type="text" readonly value="@Environment.GetEnvironmentVariable("BaseURL")/Redirect/Rdrc/" class="form-control-lg" style="width:34%" />
        <input asp-for="ShortUrl" title="Доступны только латинские буквы и цифры, длина от 3-6 символов" class="form-control-lg" style="width:15%" pattern="^[a-zA-Z,0-9]{3,6}" required/>
    </div>
    <div class="form-group" style="width=100%">
        <label asp-for="Date" class="control-label">Дата</label><br />
        <input type="text" readonly asp-for="Date" class="form-control-lg" style="width:49%" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn-sm" />
    </div>
</form>