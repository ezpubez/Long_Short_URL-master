@{ ViewData["Title"] = "Создать ссылку"; }

<div class="jumbotron text-center">
    <p class="lead">Введи необходимую ссылку и нажми кнопку "Сократить"</p>
    <hr class="my-4">
    <form asp-action="CutLink" method="post">
        <div class="form-group">
            <div class="container-fluid">
                <input name="longUrl" type="url" class="form-control" id="inputLink" placeholder="Введите ссылку">
            </div>
        </div>
        <p class="lead">
            <input class="btn btn-primary btn-lg" type="submit" name="name" value="Сократить" />
        </p>
    </form>
</div>